<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="tablayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tabselector</item>
        <item name="android:background">@color/tabBackgroundUnSelected</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CredentialsStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="registerationButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/credential_white</item>
    </style>
    <style name="loginButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/buttonLogin</item>
    </style>

    <style name="editButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">#313131</item>
    </style>

</resources>