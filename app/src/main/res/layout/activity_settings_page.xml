<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsPage">


    <TextView
        android:id="@+id/tv_editprofile"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="168dp"
        android:fontFamily="@font/montserrat"
        android:text="Theme"
        android:textColor="#A1FFFFFF"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_notifalert"
        android:layout_width="197dp"
        android:layout_height="23dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="328dp"
        android:fontFamily="@font/montserrat"
        android:text="Forecast for Today"
        android:textColor="#A1FFFFFF"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_notifalert2"
        android:layout_width="197dp"
        android:layout_height="23dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="364dp"
        android:fontFamily="@font/montserrat"
        android:text="Forecast for Tomorrow"
        android:textColor="#A1FFFFFF"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_notifalert3"
        android:layout_width="197dp"
        android:layout_height="23dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="400dp"
        android:fontFamily="@font/montserrat"
        android:text="Units"
        android:textColor="#A1FFFFFF"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_notifalert4"
        android:layout_width="197dp"
        android:layout_height="23dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="488dp"
        android:fontFamily="@font/montserrat"
        android:text="Sound Alert Notification"
        android:textColor="#A1FFFFFF"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_notifalert5"
        android:layout_width="197dp"
        android:layout_height="23dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="524dp"
        android:fontFamily="@font/montserrat"
        android:text="Send Notification"
        android:textColor="#A1FFFFFF"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_your_location"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="587dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/montserrat"
        android:text="Your location: Kuala Lumpur"
        android:textAlignment="center"
        android:textColor="#A1FFFFFF"
        android:textSize="15sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_changepassword"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="204dp"
        android:fontFamily="@font/montserrat"
        android:text="Service API"
        android:textColor="#A1FFFFFF"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_privacy"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="240dp"

        android:fontFamily="@font/montserrat"
        android:text="Language"
        android:textColor="#A1FFFFFF"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_account"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="General"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_notification"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Forecast"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_notification2"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Notifications"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="183dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Settings"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/homePage"
            android:layout_width="65dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="1dp"
            android:padding="15dp"

            app:srcCompat="@drawable/house_unclicked" />


        <ImageView
            android:id="@+id/newsPage"
            android:layout_width="65dp"
            android:layout_height="70dp"
            android:layout_marginLeft="35dp"
            android:layout_marginBottom="1dp"
            android:padding="15dp"

            app:srcCompat="@drawable/news_unclicked" />

        <ImageView
            android:id="@+id/healthRecPage"
            android:layout_width="65dp"
            android:layout_height="70dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="1dp"
            android:padding="12dp"
            app:tint="@color/credential_white"
            app:srcCompat="@drawable/heart_not_filled" />

        <ImageView
            android:id="@+id/userPage"
            android:layout_width="65dp"
            android:layout_height="70dp"
            android:layout_marginLeft="35dp"
            android:layout_marginBottom="1dp"
            android:padding="12dp"
            app:srcCompat="@drawable/user_not_filled"
            app:tint="@color/credential_white" />

    </LinearLayout>


</RelativeLayout>