                    app:srcCompat="@drawable/news1_pic" />
                <TextView
                    android:id="@+id/tv_news2_title"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="A Sustainable Alternative to Air Conditioning"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_news2_publish"
                    android:layout_width="119dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="170dp"
                    android:layout_marginTop="115dp"
                    android:layout_toEndOf="@+id/imageView2"
                    android:fontFamily="@font/montserrat"
                    android:text="Published: Oct 30, 2023 12:00 PM"
                    android:textColor="#A1FFFFFF"
                    android:textSize="13sp" />
            </com.google.android.material.card.MaterialCardView>
