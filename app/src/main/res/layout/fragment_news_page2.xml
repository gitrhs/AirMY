<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="Fragments.NewsPage1Fragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/view_news1"
                android:layout_width="340dp"
                android:layout_height="152dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/black">
                <ImageView
                    android:id="@+id/iv_news1"
                    android:layout_width="163dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    app:srcCompat="@drawable/news1_pic" />
                <TextView
                    android:id="@+id/tv_news1_title"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="A Sustainable Alternative to Air Conditioning"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_news1_publish"
                    android:layout_width="119dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="170dp"
                    android:layout_marginTop="115dp"
                    android:layout_toEndOf="@+id/imageView2"
                    android:fontFamily="@font/montserrat"
                    android:text="Published: Oct 30, 2023 12:00 PM"
                    android:textColor="#A1FFFFFF"
                    android:textSize="13sp" />
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/view_news2"
                android:layout_width="340dp"
                android:layout_height="152dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
