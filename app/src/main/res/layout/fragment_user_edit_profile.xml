<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="Fragments.UserEditProfile"
    android:background="@color/black">

        <ImageView
            android:id="@+id/userBackground"
            android:layout_width="match_parent"
            android:layout_height="238dp"
            android:layout_marginBottom="200dp"
            app:srcCompat="@drawable/kuala_lumpur_skyline_at_dusk_1" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="180dp"
            android:src="@drawable/camera_svgrepo_com"
            app:tint="@color/credential_white" />


        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_btn_rounded"
            android:backgroundTint="#40FFFFFF"
            android:src="@drawable/ic_chevron_left"
            app:tint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="40dp"
            android:background="@android:drawable/editbox_background_normal"
            android:backgroundTint="@color/black"
            android:paddingHorizontal="25dp"
            android:text="Edit Profile"
            android:textColor="@color/credential_white"
            android:textSize="12dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="140dp"
            android:background="@color/black"
            app:cardCornerRadius="100dp"

            >

            <ImageView
                android:id="@+id/userPic"
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/abc3e8efa9824b4be6ac6cae18fb7abd" />


        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="190dp"
            android:src="@drawable/camera_svgrepo_com"
            app:tint="@color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="185dp"
                android:text="Name"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/editUserName"
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="210dp"
                android:background="@drawable/credentials_rounded_edittext"
                android:hint="Username"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:selectAllOnFocus="true"
                android:textColor="@color/black"
                android:textColorHint="@color/very_light_grey"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="270dp"
                android:text="Email"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/editUserEmail"
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="295dp"
                android:background="@drawable/credentials_rounded_edittext"
                android:hint="@string/prompt_email"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:selectAllOnFocus="true"
                android:textColor="@color/black"
                android:textColorHint="@color/very_light_grey"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="355dp"
                android:text="Password"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/editUserPass"
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="380dp"
                android:background="@drawable/credentials_rounded_edittext"
                android:hint="@string/prompt_password"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:selectAllOnFocus="true"
                android:textColor="@color/black"
                android:textColorHint="@color/very_light_grey"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="440dp"
                android:text="Date of Birth"
                android:textSize="16dp" />

            <Button
                android:id="@+id/DOB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="465dp"
                android:text="Pick Date"
                android:background="@drawable/bttn_login_rounded"
                style="@style/registerationButton"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="530dp"
                android:text="Country/Region"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/editUserRegion"
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="555dp"
                android:background="@drawable/credentials_rounded_edittext"
                android:hint="@string/prompt_password_again"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:selectAllOnFocus="true"
                android:textColor="@color/black"
                android:textColorHint="@color/very_light_grey"
                android:textSize="18dp" />

            <Button
                android:id="@+id/login"
                style="@style/loginButton"
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="640dp"
                android:background="@drawable/bttn_login_rounded"
                android:backgroundTint="@color/buttonLogin"
                android:text="Save Changes"
                android:textColor="@color/credential_white"
                android:textSize="18dp" />


        </RelativeLayout>

</FrameLayout>