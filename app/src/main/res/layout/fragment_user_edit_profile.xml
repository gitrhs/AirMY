<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="Fragments.UserEditProfile"
    android:background="@color/black">

        <ImageView
            android:id="@+id/userBackground"
            android:layout_width="match_parent"
            android:layout_height="238dp"
            android:scaleType="fitXY"
            android:layout_marginBottom="200dp"
            app:srcCompat="@drawable/kuala_lumpur_skyline_at_dusk_1" />


        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_btn_rounded"
            android:backgroundTint="#40FFFFFF"
            android:src="@drawable/ic_chevron_left"
            app:tint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@android:drawable/editbox_background_normal"
            android:backgroundTint="@color/black"
            android:paddingHorizontal="25dp"
            android:text="Edit Profile"
            android:textColor="@color/credential_white"
            android:textSize="12dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:background="@color/black"
            app:cardCornerRadius="100dp"

            >

            <ImageView
                android:id="@+id/userPic"
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/abc3e8efa9824b4be6ac6cae18fb7abd" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/camera_svgrepo_com"
                app:tint="@color/black" />
        </com.google.android.material.card.MaterialCardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp">
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="170dp"
                android:layout_centerHorizontal="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/editName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/credentials_rounded_edittext"
                    android:hint="Username"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:selectAllOnFocus="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/very_light_grey"
                    android:textSize="18dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="userName"
                    android:layout_marginTop="20dp"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/editUserName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/credentials_rounded_edittext"
                    android:hint="Username"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:selectAllOnFocus="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/very_light_grey"
                    android:textSize="18dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Email"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/editUserEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/credentials_rounded_edittext"
                    android:hint="@string/prompt_email"
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="20dp"
                    android:selectAllOnFocus="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/very_light_grey"
                    android:textSize="18dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Password"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/editUserPass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/credentials_rounded_edittext"
                    android:hint="@string/prompt_password"
                    android:inputType="textPassword"
                    android:paddingLeft="20dp"
                    android:selectAllOnFocus="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/very_light_grey"
                    android:textSize="18dp" />
                <Button
                    android:id="@+id/savechanges"
                    style="@style/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/bttn_login_rounded"
                    android:backgroundTint="@color/buttonLogin"
                    android:text="Save Changes"
                    android:textColor="@color/credential_white"
                    android:textSize="18dp" />
            </LinearLayout>


        </RelativeLayout>

</FrameLayout>