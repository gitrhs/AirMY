<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FundraiserMain">


    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/fundraiserpic" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="110dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/montserrat"
        android:text="We believe fundraising can be a great way to change the world. Join our efforts to enhance air quality awareness and promote healthier living. Your support will contribute to a sustained impact, fostering improved air quality and building a healthier future for generations to come."
        android:textSize="16.5sp" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="460dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/montserrat"
        android:text="- AIRMY Team"
        android:textColor="#87A6F6"
        android:textSize="16.5sp" />

    <Button
        android:id="@+id/DonateNowButton"
        android:layout_width="305dp"
        android:layout_height="72dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="515dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="#1E232C"
        android:text="Donate now"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/montserrat"
        android:textStyle="bold"
        android:textSize="17sp" />

</RelativeLayout>