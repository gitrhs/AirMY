<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="Fragments.HealthRecFragment">

        <!-- Air Quality -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/airqualityToday"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/maskSvg"
                android:layout_width="70dp"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:layout_height="70dp"
                android:textAlignment="viewEnd"
                android:layout_marginTop="30dp"
                android:src="@drawable/masksvg" />

            <TextView
                android:id="@+id/maskRequiry"
                android:layout_width="100dp"
                android:layout_gravity="end"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="105dp"
                android:text="Mask Required"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/healthEffictsToday"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:gravity="center_horizontal"
                android:text="Okay, but sensitive individuals may experience minor health effects"
                android:textSize="8dp" />

            <TextView
                android:id="@+id/AirQualityTextOnlyToday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:text="Air Quality"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/airqualityTextRateToday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="72dp"
                android:text="Moderate"
                android:textColor="#FF9800"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/airqualityNumberTodays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="40dp"
                android:text="0"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/faceSvg"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/expressionless_facesvg" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="185dp"
            android:text="UV Index"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp" />

        <!-- UV Index -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/UVToday"
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:layout_marginTop="225dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="20dp">
        <TextView
            android:id="@+id/uvIndexText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="#3ec1b8"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textSize="100dp"></TextView>
            <TextView
                android:id="@+id/textUV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:text="Low"
                android:paddingRight="50dp"
                android:paddingLeft="50dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textSize="30dp"></TextView>
        </com.google.android.material.card.MaterialCardView>



        <TextView
            android:id="@+id/textView7"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="430dp"
            android:fontFamily="@font/montserrat"
            android:foregroundGravity="center_horizontal"
            android:text="Now, 9.41\n\nLow for the rest of the day. Levels of Moderate or higher were reached from 10:00 to 17:00."
            android:textSize="17sp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/HowSafe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="600dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center|top"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="How Safe?"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="19sp"/>

                <View
                    android:layout_width="290dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:background="#FFFFFF" />

                <TextView
                    android:id="@+id/HowSafeText"
                    android:layout_width="260dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="If you are sensitive to air pollution, consider reducing prolonged or heavy exertion. It might be a good idea to take more breaks, do less intense activities, or shorten the duration of outdoor activities."
                    android:fontFamily="@font/montserrat"
                    android:textSize="13sp" />
            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="780dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/emailtext"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center|top"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Join Our Community!"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="19sp"/>

                <View
                    android:layout_width="290dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:background="#FFFFFF" />

                <TextView
                    android:id="@+id/emailtextdesc"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Subscribe to our newsletter or Join to our telegram community."
                    android:fontFamily="@font/montserrat"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/telegrambutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="#0084c6"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/telegram"
                    android:layout_marginBottom="10dp"
                    android:text="AirMY Community"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#FFFFFFFF" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>


            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/emailsend"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="950dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp">


            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <EditText
                    android:id="@+id/et_enteremailaddress"
                    android:layout_width="216dp"
                    android:layout_height="48dp"
                    android:layout_alignStart="@+id/view_emailaddress"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/montserrat"
                    android:inputType="textEmailAddress"
                    android:text="Enter your email address"
                    android:textColor="#79FFFFFF"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:backgroundTint="#3F51B5"
                    android:layout_marginTop="-45dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/montserrat"
                    android:paddingLeft="15dp"
                    android:paddingTop="3dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="3dp"
                    android:text="Subscribe"
                    android:textColor="#79FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>
</ScrollView>