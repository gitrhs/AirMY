<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- First CARD -->
    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="10dp">
        <TextView
            android:id="@+id/dailyChanceOfRain"
            android:layout_width="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_text"
            android:paddingBottom="3dp"
            android:textAlignment="center"
            android:layout_marginStart="20dp"
            android:drawableStart="@drawable/rainpossibility"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:drawablePadding="5dp"
            android:text="0%"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/dayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_gravity="center_horizontal"
            android:text="Today"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/weatherTextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:layout_marginRight="20dp"
            android:text="Clear"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tempTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="70dp"
            android:text="-°C"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/minTempTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:drawableLeft="@drawable/lowtemp"
            android:layout_marginTop="100dp"
            android:text="-°C" />

        <TextView
            android:id="@+id/humidityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="20dp"
            android:layout_marginTop="100dp"
            android:text="94%"
            android:drawableLeft="@drawable/humidity"
            />

        <TextView
            android:id="@+id/uvTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="20dp"
            android:layout_marginTop="70dp"
            android:drawableLeft="@drawable/uv"
            android:drawablePadding="2dp"
            android:text="low" />

        <TextView
            android:id="@+id/maxTempTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="70dp"
            android:drawableLeft="@drawable/hightemp"
            android:text="-°C" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View
                android:layout_width="0.5dp"
                android:layout_height="50dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="75dp"
                android:background="#FFFFFF" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>